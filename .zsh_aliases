# ~/.zsh_aliases

# todo.txt
alias t='$HOME/bin/todo/todo.sh -a -t'

# Colored utilities
alias less='less --use-color'
alias diff='diff --color'
alias hexedit='hexedit --color'

# NTH, rarely used
alias _='sudo '

alias acp='apt-cache policy'
alias acse='apt-cache search'
alias acsp='apt-cache showpkg'
alias afs='apt-file search --regexp'
alias afu='sudo apt-file update'
alias aga='sudo apt autoclean'
alias agar='sudo apt autoremove'
alias agb='sudo apt build-dep'
alias agc='sudo apt clean'
alias agd='sudo apt dselect-upgrade'
alias age='sudo apt'
alias agi='sudo apt install'
alias agli='apt list --installed'
alias aglu='apt list --upgradable'
alias agp='sudo apt purge'
alias agr='sudo apt remove'
alias ags='apt source'
alias agu='sudo apt update'
alias agud='sudo apt update && sudo apt dist-upgrade'
alias agug='sudo apt upgrade'
alias aguu='sudo apt update && sudo apt upgrade'
alias kclean='sudo aptitude remove -P ?and(~i~nlinux-(ima|hea) ?not(~n`uname -r`))'

alias cp='nocorrect cp -i'
alias fkill=fzf-kill
alias h=history
alias history='omz_history -i'
alias hs='history | grep'
alias hsi='history | grep -i'
alias l='ls -lah'
alias la='ls -lAh'
alias ll='ls -lh'
alias ls='ls --color=auto'
alias lsa='ls -lah'
alias man='nocorrect man'
alias md='mkdir -p'
alias mkdir='nocorrect mkdir'
alias mv='nocorrect mv -i'
alias rd=rmdir
alias rm='rm -i'
alias su='nocorrect su'
alias sudo='nocorrect sudo'
alias which-command=whence
